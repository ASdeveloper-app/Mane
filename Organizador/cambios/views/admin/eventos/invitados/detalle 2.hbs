<h1>Invitados</h1>
<div class="Eventos">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Delete</th>
        <th>Editar</th>
      </tr>
    </thead>
    <tbody>
      {{#each events}}
      <tr>
        <th> {{ this.name }} </th>
        <th> <a href="/admin/eventos/{{this._id}}/delete">Delete</a> </th>
        <th> <a href="/admin/eventos/detalle/{{this._id}}">Edit</a> </th>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="botonesperfil">
    <br>
    <button type="button" class="btninfi btn-info btn-lg" data-toggle="collapse" data-target="#demo1">Añadir</button>
    <div id="demo1" class="collapse">
      <div class="inscripción">
        <form action="/admin/eventos/detalle/:id" method="POST">
          <div class="form-group">
            <label for="exampleInputName1">Nombre</label>
            <input type="text" name="name" class="form-control" id="exampleInputName1" />
          </div>

          <div class="form-group">
            <label for="exampleInputName1">Apellido</label>
            <input type="text" name="lastName" class="form-control" id="exampleInputName1" />
          </div>

          <div class="form-group">
            <label for="exampleInputPhone1">Email</label>
            <input type="text" name="email" class="form-control" id="exampleInputPhone1" />
          </div>
          <div class="invalid-feedback">Example invalid custom select feedback</div>
      </div>
      <br>
      <button type="submit">Submit</button>
      </form>

    </div>
  </div>

  <br><br><br>